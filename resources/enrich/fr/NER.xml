<?xml version="1.0" encoding="UTF-8"?>
<information>
    
    <entries>
        <before>
            <entry name="word" />
            <entry name="POS" />
        </before>
        <after>
            <entry name="NER" mode="train" />
        </after>
    </entries>
    
    <features>
        <nullary name="lower" action="lower" display="no" />
        
        <directory name="NER-directory" display="no">
            <dictionary action="multiword" entry="lower" path="../../dictionaries/fr/NER-directory/company" />
            <dictionary action="token" entry="lower" path="../../dictionaries/fr/NER-directory/company-trigger" />
            <dictionary action="multiword" entry="lower" path="../../dictionaries/fr/NER-directory/organisation" />
            <dictionary action="token" entry="lower" path="../../dictionaries/fr/NER-directory/organisation-trigger" />
            <dictionary action="multiword" entry="lower" path="../../dictionaries/fr/NER-directory/city" />
            <dictionary action="multiword" entry="lower" path="../../dictionaries/fr/NER-directory/country" />
            <dictionary action="multiword" entry="lower" path="../../dictionaries/fr/NER-directory/region" />
            <dictionary action="multiword" entry="lower" path="../../dictionaries/fr/NER-directory/departement" />
            <dictionary action="multiword" entry="lower" path="../../dictionaries/fr/NER-directory/person" />
            <dictionary action="token" entry="lower" path="../../dictionaries/fr/NER-directory/title-or-function" />
        </directory>
        
        <fill name="NER-directory-POS" entry="NER-directory" filler-entry="POS">
            <string action="equal">O</string>
        </fill>
        
        <find name="NounBackward" action="backward" return_entry="word">
            <regexp action="check" entry="POS">^N</regexp>
        </find>
        
        <find name="NounForward" action="forward" return_entry="word">
            <regexp action="check" entry="POS">^N</regexp>
        </find>
    </features>
</information>
